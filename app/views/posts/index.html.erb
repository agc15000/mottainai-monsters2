<h1>投稿一覧</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <strong><%= post.user.email %></strong>:
      <%= post.content %>
      <% if user_signed_in? && post.user == current_user %> #IDで一致を確認してる？
        <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
      <% end %>
    </li>
  <% end %>
</ul>